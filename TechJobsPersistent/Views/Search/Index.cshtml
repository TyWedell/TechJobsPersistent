<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @if (ViewBag.jobs != null)
    {
        <table style="border:1px solid black">
            <tr>
                <th style="padding: 10px">ID</th>
                <th style="padding: 10px">Name</th>
                <th style="padding: 10px">Employer</th>
                <th style="padding: 10px">Skills</th>
            </tr>
            @foreach (var job in ViewBag.jobs)
            {
                <tr>
                    <td style="padding: 10px">@job.JobId</td>
                    <td style="padding: 10px">@job.Name</td>
                    <td style="padding: 10px">@job.EmployerName</td>
                    <td style="padding: 10px">@job.SkillText</td>
                </tr>
            }
        </table>
    }


</div>