@model TechJobsPersistent.Models.Skill

<br />
<div>
    <h1>Add New Skill</h1>
</div>
<br />

<form asp-controller="Skill" asp-action="Add" method="post">
    <div class="form-group">
        <input asp-for="Name" placeholder="Skill Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <input asp-for="Description" placeholder="Skill Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <input type="submit" value="Submit" />
</form>